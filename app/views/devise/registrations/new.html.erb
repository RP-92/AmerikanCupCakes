<div class="container roundgrey">
  <div class="row">
    <div class="col-md-12">
      <h2 class="centertext", style="color: #FFCCFF">Registrarse</h2>
    </div>
  </div>
  <br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :style => 'background-color: #FFB2FF;', multipart: true, class:"form-horizontal col-md-6 col-md-offset-3 roundgrey panel"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="field" style="color: #CC0066">
    <%= f.label :correo, class: "col-md-3 control-label" %>
    <div class="col-md-9 col-lg-7">
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
  </div>
      
  <br>

  <div class="field" style="color: #CC0066">
    <%= f.label :contraseÃ±a, class: "col-md-3 control-label" %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <div class="col-md-9 col-lg-7">
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
  </div>
      
  <br>

  <div class="field" style="color: #CC0066">
    <%= f.label :confirmar_contraseÃ±a, class: "col-md-3 control-label" %>
    <div class="col-md-9 col-lg-7">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
  </div>
      
  <br>

  <div class="form-group">
      <div class="col-lg-3">
        <%= f.submit "Registrarse", class: "btn btn-danger btn-lg" %>
      </div>
    <div class="col-lg-5">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>