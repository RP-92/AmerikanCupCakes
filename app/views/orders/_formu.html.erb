<%= form_for( @order, :html => { :style => 'background-color: #FFB2FF;', multipart: true, class:"form-horizontal col-md-6 col-md-offset-3 roundgrey panel"}) do |f| %>

  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h3>
        <%= pluralize(@order.errors.count, "error") %> prohibió
        que se registrara su orden:
      </h2>
      <ul>
        <% @order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group" style="color: #CC0066">
      <%= f.label :name, class: "col-md-5 control-label required"%>
      <div class="col-md-7 col-lg-7">
        <%= f.text_field :name, class: "form-control", placeholder: "Fiesta de cumpleaños" %>
      </div>
    </div>

  <div class="form-group" style="color: #CC0066">
    <%= f.label :"fecha del evento", class: "col-md-5 control-label" %>
    <div class="col-md-7">
      <%= f.date_select :date, {:use_month_names => ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre','Diciembre']}, class: "form-control"%>
      </div>
    </div>

  <div class="form-group" style="color: #CC0066">
    <%= f.label :"telefono de contacto", class: "col-md-5 control-label required"%>
    <div class="col-md-7 col-lg-7">
      <%= f.text_field :phone, class: "form-control"%>
      </div>
    </div>
 
  <div class="form-group" style="color: #CC0066">
    <%= f.label :"descripción del pedido", class: "col-md-5 control-label" %>
    <div class="col-md-7 col-lg-7">
      <%= f.text_area :description, class: "form-control", placeholder: "Escribe aquí detalles acerca del pedido" %>
      </div>
    </div>

  <div class="form-group" style="color: #CC0066">
    <%= f.label :"email de contato", class: "col-md-5 control-label"%>
    <div class="col-md-7 col-lg-7">
      <%= f.text_field :email, class: "form-control"%>
      </div>
    </div>

  <div class="form-group" style="color: #CC0066">
    <%= f.label :"número de personas", class: "col-md-5 control-label required"%>
    <div class="col-md-7 col-lg-7">
      <%= f.number_field :attendants, class: "form-control"%>
      </div>
    </div>

  <div class="container col-md-11 col-md-offset-1 roundgrey panel" style="background-color: #FFCCFF">
    <div class="row">
      <div class="col-md-8 col-md-offset-2 centertext">
        <h5 style="color: #990033"> Base de la torta </h5>
      </div>
    </div>
    <div class="form-group" style="color: #CC0066">
      <br>
      <div class="col-md-7-offset-5 col-lg-7">
        <%= f.collection_select(:cake_base_id, CakeBase.all, :id, :name) %>
      </div>
    </div>

    <div class="form-group" style="color: #CC0066">
      <div class="col-md-7-offset-5 col-lg-7">
      <%= f.text_field :cake_base_name, class: "form-control"%>
      </div>
    </div>
  </div>

  <div class="container col-md-11 col-md-offset-1 roundgrey panel" style="background-color: #FFCCFF">
    <div class="row">
      <div class="col-md-8 col-md-offset-2 centertext">
        <h5 style="color: #990033"> Relleno de la torta </h5>
      </div>
    </div>
    <div class="form-group" style="color: #CC0066">
      <br>
      <div class="col-md-7-offset-5 col-lg-7">
        <%= f.collection_select(:cake_filling_id, CakeFilling.all, :id, :name) %>
      </div>
    </div>

    <div class="form-group" style="color: #CC0066">
      <div class="col-md-7-offset-5 col-lg-7">
      <%= f.text_field :cake_filling_name, class: "form-control"%>
      </div>
    </div>
  </div>    
 
<br>
<div class="col-md-8 col-md-offset-2 centertext">
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <%= f.submit "Realizar pedido", class: "btn btn-danger btn-lg" %>
    </div>
  </div>
  <p style="color: #CC0066">
  Se debe abonar un 50% del precio con un mínimo de 3 días de anticipación, el precio varía según lo pedido.</p>
</div>
<% end %>