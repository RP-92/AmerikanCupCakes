<%= form_for( @photo, :html => { :style => 'background-color: #FFB2FF;', multipart: true, class:"form-horizontal col-md-6 col-md-offset-3 roundgrey panel"}) do |f| %>

    <div class="form-group">
      <%= f.label :imagen_a_subir , class: "col-md-3 control-label" %>
      <div class="col-md-9 col-lg-7">
        <%= f.file_field :picture, class: "inputfile" %>
      </div>
    </div>

      
  <br>

    <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <%= f.submit "Guardar", class: "btn btn-danger btn-lg" %>
        </div>
    </div>

  <% end %>